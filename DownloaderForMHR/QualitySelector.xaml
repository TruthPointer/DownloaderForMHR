<Window x:Class="DownloaderForMHR.QualitySelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DownloaderForMHR"
        mc:Ignorable="d"
 Title="请选择视频分辨率" Height="180" Width="180" MinHeight="120" MinWidth="180" ResizeMode="NoResize" SizeToContent="Height" ShowInTaskbar="False" Closing="Window_Closing" Topmost="True">
    <Grid Margin="0,0,0,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="126*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lvMediaResolution" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="3,3,3,3"/>
        <Button Grid.Row="1" x:Name="btnOK" Content="确定" Click="btnOK_Click" HorizontalAlignment="Stretch" Margin="48,0,48,0"/>

    </Grid>
</Window>
