<Window x:Class="DownloaderForMHR.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DownloaderForMHR"
        mc:Ignorable="d"
        Title="更新中..." Topmost="True" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Width="430" VerticalAlignment="Top" MaxHeight="90">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbTaskInfo"  Grid.Row="0" HorizontalAlignment="Stretch" Margin="5,0,5,5">
            <TextBlock TextWrapping="Wrap" Text="正在更新"/>
        </Label>

        <ProgressBar x:Name="pbTask"  Grid.Row="1"  IsIndeterminate="True" HorizontalAlignment="Stretch" Height="8" Margin="6,0,6,0"/>

       
       
    </Grid>
</Window>
